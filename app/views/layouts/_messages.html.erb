<% if alert %>
  <div class="ui negative message">
    <i class="close icon"></i>
    <div class="header">
      <%= alert %>
    </div>
  </div>
<% end %>

<% if notice %>
  <div class="ui positive floating message">
    <i class="close icon"></i>
    <div class="header">
      <%= notice %>
    </div>
  </div>
<% end %>

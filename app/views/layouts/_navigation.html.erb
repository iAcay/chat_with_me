<div class="ui large inverted menu">
  <%= link_to 'ChatWithMe', root_path, class: 'item', id: 'logo' %>
  <%= link_to 'Chatroom', root_path, class: 'item' %>
  <div class="right menu">
    <% if logged_in? %>
      <div class="ui dropdown item">
      Account <i class="dropdown icon"></i>
        <div class="menu">
          <%= link_to 'Logout', logout_path, class: 'item', method: :delete %>
        </div>
      </div>
    <% else %>
      <div class="item">
          <%= link_to 'Log in', login_path, class: "ui inverted orange button" %>
          <%= link_to 'Sign up', signup_path, class: "ui inverted orange button" %> 
      </div>
    <% end %>
  </div>
</div>
